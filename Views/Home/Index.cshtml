@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Dojo Survey</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

        <link rel="stylesheet" href="~/css/stylel.css"/>
    </head>

    <body>
        @model User
        <div class="container">
            <div  style="border: 2pt solid black;" class="row">
                <form action="user/create" method="POST">

                    <div class="form-group row">
                        <span asp-validation-for="FirstName"></span>
                        <label asp-for="FirstName" class="col-sm-2 col-form-label"> First Name</label>
                        <div class="col-sm-10">
                        <input asp-for="FirstName">
                        </div>
                    </div>

                    <div class="form-group row">
                        <span asp-validation-for="LastName"></span>
                        <label asp-for="LastName" class="col-sm-2 col-form-label"> Last Name</label>
                        <div class="col-sm-10">
                        <input asp-for="LastName">
                        </div>
                    </div>

                    <div class="form-group row">
                        <span asp-validation-for="Age"></span>
                        <label asp-for="Age" class="col-sm-2 col-form-label">Age</label>
                        <div class="col-sm-10">
                        <input asp-for="Age">
                        </div>
                    </div>

                    <div class="form-group row">
                        <span asp-validation-for="Email"></span>
                        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                        <input asp-for="Email">
                        </div>
                    </div>

                    <div class="form-group row">
                        <span asp-validation-for="Password" Password></span>
                        <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                        <input asp-for="Password">
                        </div>
                    </div>
                     <button type="submit" class="btn btn-primary mb-2">Submit</button>
                </form>
            </div>
        </div>
    </body>
</html>












